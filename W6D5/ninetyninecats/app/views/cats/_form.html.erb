<% if is_edit %>
    <%  action = cat_url(cat) %>
    <%  button_text = "Update Cat" %>
<% else %>
    <%  action = cats_url %>
    <%  button_text = "Create Cat" %>
<% end %>


<form action="<%= action %>" method= "POST">
<% if is_edit %>
    <input type="hidden" name="_method" value="PATCH">
<% end %>
    <label for = "name"> Cat Name </label>
    <input name = "cat[name]" id = "name" value = "<%=@cat.name%>" type = "text">
    <br>
    <label for = "birth_date"> Birth Date </label>
    <input name = "cat[birth_date]" id = "birth_date" value = "<%=@cat.birth_date%>" type = "date">
    <br>
    <label for = "color"> Color </label>
    <input name = "cat[color]" id = "color" value = "<%=@cat.color%>" type = "text">
    <br>
   
    
    <label for = "sex"> Sex </label>
    <label for = "m"> M </label>
    <input name = "cat[sex]" id = "m" value = "M" type= "radio" <%= @cat.sex == "M" ? "checked" : ""%>>
    <label for = "f"> F </label>
    <input name = "cat[sex]" id = "f" value = "F" type= "radio" <%= @cat.sex == "F" ? "checked" : ""%>>


    <br>
    <label for = "description"> Description </label>
    <textarea name = "cat[description]" id = "description">
    <%=@cat.description%>
    </textarea>
    <br>
    <br>
    <input type="submit" value="<%=button_text%>"> 

</form>