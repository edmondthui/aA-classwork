<body>
    <h1> Edit Album </h1>

    <form action="<%=album_url(@album) %>" method= "POST" >
    <input type="hidden" name="_method" value="PATCH">
    <input type="hidden" name= "authenticity_token" value = "<%=form_authenticity_token%>">
    <label for="title">Title: </label>
    <input type="text" id="title" name="album[title]" value ="<%=@album.title%>">
    <label for="year">Year: </label>
    <input type="number" id= "year" name= "album[year]" value ="<%=@album.year%>">
    <label for="band">Band: </label>

    <select name="album[band_id]" id="band">
        <option value="select" disabled>Choose a Band</option>
        <% bands = Band.all.each do |band| %>
        <option value="<%=band.id%>" <%= "selected" if band.id == @album.band_id %>><%= band.name %></option>
        <% end %>
    </select>

    <label for="type">Performance Type: </label>
    <input type="radio" name="album[studio]" id="studio" value ="true" <%= "checked" if @album.studio%>>
    <label for="studio">Studio</label>
    <input type="radio" name="album[studio]" id ="live" value ="false" <%= "checked" if !@album.studio%>>
    <label for="live">Live</label>

    <br/><br/>

    <input type="submit" value = "Edit Album">
    </form>
</body>